{
    "compilerOptions": {
        "target": "ESNext", // Use modern JavaScript features
        "module": "ESNext", // Keep ES module syntax
        "jsx": "preserve", // Keep JSX for Solid's compiler
        "jsxImportSource": "solid-js", // SolidJS JSX transformation
        "moduleResolution": "Node", // Resolve modules like Node.js
        "strict": true, // Enable all strict type checks
        "experimentalDecorators": true,
        "esModuleInterop": true, // Support CommonJS modules
        "skipLibCheck": true, // Skip type checks for libraries
        "allowSyntheticDefaultImports": true, // Default import for CommonJS
        "types": ["solid-js"], // SolidJS types
        "baseUrl": ".", // Resolve paths relative to the project root
        "paths": {
            "~/*": ["src/*"] // Alias for source files
        }
    },
    "include": ["src", "__snippets/db.ts"], // Include only the source directory
    "exclude": ["node_modules", "dist"] // Exclude built files and dependencies
}
